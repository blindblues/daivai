---
import Auth from "@/components/features/Auth.astro";

import "../styles/global.css";
---

<html lang="it">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Accedi - Dai Vai</title>
        <link rel="icon" type="image/svg+xml" href="/daivai/favicon.svg" />
    </head>
    <body class="login-page-container">
        <main class="login-content">
            <div class="back-link">
                <!-- Usa BASE_URL per tornare alla home in modo sicuro -->
                <a href={import.meta.env.BASE_URL}>‚Üê Torna alla Home</a>
            </div>
            <Auth />
        </main>
    </body>
</html>

<style>
    /* Layout positioning only as per CONTRIBUTING.md */
    .login-content {
        animation: fadeIn 0.5s ease-out;
    }
</style>
