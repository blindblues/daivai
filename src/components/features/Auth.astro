<div class="auth-container">
    <div id="auth-form">
        <h2 id="auth-title">Accedi</h2>
        <form id="supabase-auth-form">
            <div class="form-group">
                <label for="email">Email</label>
                <input
                    type="email"
                    id="email"
                    required
                    placeholder="la-tua@email.it"
                />
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input
                    type="password"
                    id="password"
                    required
                    placeholder="********"
                />
            </div>
            <button type="submit" id="auth-submit">Accedi</button>
        </form>
        <p class="toggle-text">
            <span id="toggle-prompt">Non hai un account?</span>
            <a href="#" id="toggle-auth">Registrati</a>
        </p>
        <div id="auth-message" class="message"></div>
    </div>

    <div id="user-profile" class="hidden">
        <h2>Benvenuto!</h2>
        <p id="user-email"></p>
        <button id="sign-out">Esci</button>
    </div>
</div>

<script>
    import { supabase } from "../../lib/supabase";

    const form = document.getElementById(
        "supabase-auth-form",
    ) as HTMLFormElement;
    const title = document.getElementById("auth-title");
    const submitBtn = document.getElementById("auth-submit");
    const toggleBtn = document.getElementById("toggle-auth");
    const togglePrompt = document.getElementById("toggle-prompt");
    const messageDiv = document.getElementById("auth-message");
    const authContainer = document.getElementById("auth-form");
    const profileContainer = document.getElementById("user-profile");
    const userEmail = document.getElementById("user-email");
    const signOutBtn = document.getElementById("sign-out");

    let isSignUp = false;

    // Gestione Toggle Accedi/Registrati
    toggleBtn?.addEventListener("click", (e) => {
        e.preventDefault();
        e.stopPropagation(); // Evita interferenze
        isSignUp = !isSignUp;
        if (title) title.innerText = isSignUp ? "Registrati" : "Accedi";
        if (submitBtn)
            submitBtn.innerText = isSignUp ? "Crea Account" : "Accedi";
        if (togglePrompt)
            togglePrompt.innerText = isSignUp
                ? "Hai un account?"
                : "Non hai un account?";
        if (toggleBtn) toggleBtn.innerText = isSignUp ? "Accedi" : "Registrati";
        if (messageDiv) messageDiv.innerText = ""; // Pulisce messaggi precedenti
    });

    // Gestione Form
    form?.addEventListener("submit", async (e) => {
        e.preventDefault();
        if (messageDiv) messageDiv.innerText = "Caricamento...";

        const email = (document.getElementById("email") as HTMLInputElement)
            .value;
        const password = (
            document.getElementById("password") as HTMLInputElement
        ).value;

        if (isSignUp) {
            console.log("Tentativo di registrazione per:", email);
            const { data, error } = await supabase.auth.signUp({
                email,
                password,
            });
            if (error) {
                console.error("Errore registrazione:", error.message);
                if (messageDiv) messageDiv.innerText = error.message;
            } else {
                console.log("Registrazione avvenuta:", data);
                if (messageDiv) {
                    messageDiv.classList.add("success");
                    messageDiv.innerText =
                        "Registrazione avvenuta con successo! Accesso in corso...";
                }
                // Verifica immediata dello stato utente per switchare UI
                checkUser();
            }
        } else {
            console.log("Tentativo di accesso per:", email);
            const { data, error } = await supabase.auth.signInWithPassword({
                email,
                password,
            });
            if (error) {
                console.error("Errore accesso:", error.message);
                if (messageDiv) messageDiv.innerText = error.message;
            } else {
                console.log("Accesso eseguito:", data);
                if (messageDiv) messageDiv.innerText = "Accesso effettuato!";
                checkUser();
            }
        }
    });

    // Logout
    signOutBtn?.addEventListener("click", async () => {
        await supabase.auth.signOut();
        checkUser();
    });

    // Controllo Stato Utente
    async function checkUser() {
        const {
            data: { user },
        } = await supabase.auth.getUser();
        if (user) {
            authContainer?.classList.add("hidden");
            profileContainer?.classList.remove("hidden");
            if (userEmail) userEmail.innerText = user.email || "";
        } else {
            authContainer?.classList.remove("hidden");
            profileContainer?.classList.add("hidden");
        }
    }

    checkUser();
</script>
