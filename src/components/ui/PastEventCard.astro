---
interface Props {
    eventId: string;
    title: string;
    description: string;
    image: string | null;
    imageAlt: string;
    loading?: "eager" | "lazy";
}

const {
    eventId,
    title,
    description,
    image,
    imageAlt,
    loading = "lazy",
} = Astro.props;
const PLACEHOLDER_IMAGE =
    "/daivai/images/blue-sky-background-with-clouds-free-photo.webp";
---

<div class="event-card" data-event-id={eventId}>
    <div class="event-card-image">
        <img
            src={image ?? PLACEHOLDER_IMAGE}
            alt={imageAlt}
            loading={loading}
        />
    </div>
    <div class="event-card-content">
        <h3 class="event-card-title">{title}</h3>
        <p class="event-card-description">{description}</p>
    </div>
</div>

<style>
    .event-card {
        background: rgba(255, 255, 255, 0.08);
        border: 1px solid rgba(245, 229, 144, 0.15);
        border-radius: 16px;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        min-width: 260px;
        max-width: 300px;
        flex-shrink: 0;
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
    }

    .event-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 32px rgba(0, 0, 0, 0.25);
    }

    .event-card-image {
        width: 100%;
        height: 160px;
        overflow: hidden;
    }

    .event-card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.4s ease;
    }

    .event-card:hover .event-card-image img {
        transform: scale(1.05);
    }

    .event-card-content {
        padding: 1rem;
        display: flex;
        flex-direction: column;
        gap: 0.4rem;
    }

    .event-card-title {
        font-family: "Poppins", sans-serif;
        font-weight: 700;
        font-size: 1rem;
        color: var(--secondary-color);
        margin: 0;
        line-height: 1.3;
    }

    .event-card-description {
        font-family: "Poppins", sans-serif;
        font-size: 0.82rem;
        color: rgba(245, 229, 144, 0.7);
        margin: 0;
        line-height: 1.5;
    }
</style>
