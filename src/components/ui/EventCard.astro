---
interface Props {
    title: string;
    description: string;
    image: string;
    imageAlt: string;
    loading?: "eager" | "lazy";
}

const { title, description, image, imageAlt, loading = "lazy" } = Astro.props;
---

<div class="event-card">
    <div class="event-card-image">
        <img src={image} alt={imageAlt} loading={loading} />
    </div>
    <div class="event-card-content">
        <h3 class="event-card-title">{title}</h3>
        <p class="event-card-description">{description}</p>
    </div>
</div>
